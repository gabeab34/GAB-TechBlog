  <header class="hero bg-primary navbar sticky-top">
    <h1>
      Welcome! 
    </h1>
    {{#if logged_in}}
    <nav>
      <button class="btn btn-outline-dark" id="logout">logout</button>
      <button class="btn btn-outline-dark" id="dashboard"><a href="/dashboard">Dashboard</a></button>
    </nav>



    {{/if}}
  </header>
  {{#unless logged_in}}
<div class="jumbotron">
  <h2 class="signup-form">Welcome to the tech-blog! Please login to post or comment</h2>
  <p class="lead">If this is your first time here, please sign to get started, otherwise - Login!</p>
  <hr class="my-4">
  <form class="form signup-form">
  <div class="form-group">
    {{!-- <button class="btn btn-primary" type="submit" id="signUp">Sign Up</button> --}}
    <a type="button" class="btn btn-outline-dark" href="/login">Login!</a>
  </div>
</form>

<form class="form login-form">
  <div class="form-group">
    {{!-- <button class="btn btn-primary" type="submit" id="logIn">Login</button> --}}
    <a type="button" class="btn btn-outline-dark" href="/signup">Sign Up!</a>
  </div>
</form>

</div>
  {{/unless}}



  <ol class="post-list">
    {{#each posts as |post|}}
  <div>
   <h2> {{post.dataValues.postTitle}} {{post.dataValues.createdAt}} </h2>
   <p>  {{post.dataValues.postContents}} </p>
  </div>
  {{/each}}